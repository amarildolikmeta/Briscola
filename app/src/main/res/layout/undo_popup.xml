<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/undoMoveButton"
            android:layout_width="@dimen/undo_button_dimen"
            android:layout_height="@dimen/undo_button_dimen"
            android:background="@drawable/undo_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/restartGameButton"
            android:layout_width="@dimen/undo_button_dimen"
            android:layout_height="@dimen/undo_button_dimen"
            android:background="@drawable/restart_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/newGameButton"
            android:layout_width="@dimen/undo_button_dimen"
            android:layout_height="@dimen/undo_button_dimen"
            android:background="@drawable/new_game_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"/>
    </LinearLayout>

</LinearLayout>