<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.ma.group07.briscola.GameActivity"
    android:background="@drawable/poker_table">

    <RelativeLayout
        android:id="@+id/gameView"
        android:layout_width="368dp"
        android:layout_height="576dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/player2View"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_hidden_height"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/surface_height"
            android:layout_above="@+id/player1View"
            android:layout_toEndOf="@+id/linearLayout"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/surface"
                android:layout_width="@dimen/surface_width"
                android:layout_height="@dimen/surface_height"
                android:orientation="horizontal"
                android:gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false"></LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/surface"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/deckView"
                android:clipChildren="false"
                android:clipToPadding="false"
               >
                <RelativeLayout
                    android:id="@+id/deck"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:orientation="horizontal"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                   >
                    </RelativeLayout>
                <LinearLayout
                    android:id="@+id/briscolaCard"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:orientation="horizontal"

                    >
                    </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/player1View"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:paddingBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            >



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:visibility="gone"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/newGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="New Game" />

            <Button
                android:id="@+id/restartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Restart" />

            <Button
                android:id="@+id/movesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Send Data" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
